@page
@model MallMedia.Presentation.Pages.Admin.Schedule.IndexModel
<head>
    <!-- Thêm type="module" vào script để hỗ trợ import/export -->
    <script type="module">
        import { checkUserAuthentication } from '/js/auth.js';  // Đảm bảo đường dẫn đúng

        window.onload = async function () {
            try {
                const currentUser = await checkUserAuthentication("Admin");
            } catch (error) {
                console.error('Lỗi khi xác thực:', error);
            }
        };
    </script>
</head>
<div class="container mt-5">
    <h2>Schedule List</h2>
    <a class="btn btn-info" asp-page="/Admin/Schedule/Create">Create</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>No.</th>
                <th>Name Device</th>
                <th>StartDate</th>
                <th>EndDate</th>
                @* <th>Action</th> *@
            </tr>
        </thead>
        <tbody class="text-center">
            @{
                int index = Model.ItemsFrom;
            }
            @foreach (var content in Model.Schedules)
            {
                <tr>
                    <td>@index</td>
                    <td>@content.Devicedto.DeviceName</td>
                    <td>@(content.StartDate.HasValue ? content.StartDate.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                    <td>@(content.EndDate.HasValue ? content.EndDate.Value.ToString("dd/MM/yyyy") : "N/A")</td>


                    @* <td> *@
                    @*     <!-- Action Buttons (Edit/Delete) --> *@
                    @*     <a href="#" class="btn btn-primary btn-sm">Edit</a> *@
                    @*     <a href="#" class="btn btn-danger btn-sm">Delete</a> *@
                    @*     <a href="/Admin/Schedule/View/{@content.Id}" class="btn btn-success btn-sm">View Detail</a> *@
                    @* </td> *@
                </tr>

                ++index;
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="pagination">
        @if (Model.TotalPages > 1)
        {
            <ul class="pagination">
                <!-- Previous Page Button -->
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?PageNumber=1">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?PageNumber=@(Model.PageNumber - 1)">Previous</a>
                    </li>
                }

                <!-- Page Number Buttons -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="?PageNumber=@i">@i</a>
                    </li>
                }

                <!-- Next Page Button -->
                @if (Model.PageNumber < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?PageNumber=@(Model.PageNumber + 1)">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?PageNumber=@Model.TotalPages">Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>

