@page
@model MallMedia.Presentation.Pages.Admin.Content.IndexModel

@{
    ViewData["Title"] = "List content";
}
<head>
    <!-- Thêm type="module" vào script để hỗ trợ import/export -->
    <script type="module" defer>
        import { checkUserAuthentication } from '/js/auth.js';  // Đảm bảo đường dẫn đúng

        window.onload = async function () {
            try {
                // Gọi hàm checkUserAuthentication và lấy thông tin currentUser
                const currentUser = await checkUserAuthentication();
            } catch (error) {
                console.error('Lỗi khi xác thực:', error);
            }
        };
    </script>
</head>
<div class="container mt-5">
    <h2>Content List</h2>
    <a class="btn btn-info" asp-page="/Admin/Content/Create">Create</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>No.</th>
                <th style="width:300px">Title</th>
                <th style="width:400px">Description</th>
                <th>Content Type</th>
                <th>Category</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = Model.ItemsFrom;
            }
            @foreach (var content in Model.Contents)
            {
                <tr>
                    <td>@index</td>
                    <td>@content.Title</td>
                    <td>@content.Description</td>
                    <td>@content.ContentType</td>
                    <td>@content.Category.Name</td>
                    <td>@content.Status</td>
                    <td>@content.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <!-- Action Buttons (Edit/Delete) -->
                        <a href="#" class="btn btn-primary btn-sm">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>

                ++index;
            }
        </tbody>
    </table>
    <!-- Pagination -->
    <div class="pagination">
        @if (Model.TotalPages > 1)
        {
            <ul class="pagination">
                <!-- Previous Page Button -->
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?PageNumber=1">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?PageNumber=@(Model.PageNumber - 1)">Previous</a>
                    </li>
                }

                <!-- Page Number Buttons -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="?PageNumber=@i">@i</a>
                    </li>
                }

                <!-- Next Page Button -->
                @if (Model.PageNumber < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?PageNumber=@(Model.PageNumber + 1)">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?PageNumber=@Model.TotalPages">Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>