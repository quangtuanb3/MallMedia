@page
@model MallMedia.Presentation.Pages.Admin.Device.CreateModel

@{
    ViewData["Title"] = "Create Device";
}
<div class="container mt-5">
    <h2>Create Device</h2>
    <form id="filterForm" method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- Device Name -->
            <div class="form-group pt-3 col-md-6">
                <label for="deviceName">Device Name</label>
                <input type="text" id="deviceName" asp-for="Device.DeviceName" class="form-control" />
                <span asp-validation-for="Device.DeviceName" class="text-danger"></span>
            </div>

            <!-- Device Type -->
            <div class="form-group pt-3 col-md-6">
                <label for="deviceType">Device Type</label>
                <select id="deviceType" class="form-control" asp-for="Device.DeviceType">
                    <option value="">Select type</option>
                    <option value="TV">TV</option>
                    <option value="LED">LED</option>
                </select>
                <span asp-validation-for="Device.DeviceType" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Size (in inches) -->
            <div class="form-group pt-3 col-md-6">
                <label for="size">Size (inches)</label>
                <input type="number" id="size" asp-for="Device.Size" class="form-control" />
                <span asp-validation-for="Device.Size" class="text-danger"></span>
            </div>

            <!-- Resolution -->
            <div class="form-group pt-3 col-md-6">
                <label for="resolution">Resolution (__x__)</label>
                <input type="text" id="resolution" asp-for="Device.Resolution" class="form-control" />
                <span asp-validation-for="Device.Resolution" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Location Dropdown -->
            <div class="form-group pt-3 col-md-6">
                <label for="locationId">Location</label>
                <select id="locationId" class="form-control" asp-for="Device.LocationId">
                    <option value="">Select location</option>
                    @foreach (var location in Model.Locations)
                    {
                        <option value="@location.Id">Tầng: @location.Floor - @location.Department</option>
                    }
                </select>
                <span asp-validation-for="Device.LocationId" class="text-danger"></span>
            </div>
        </div>

        <!-- Submit Button -->
        <a asp-page="/Admin/Device/Index" class="btn btn-danger mt-3">Back</a>
        <button type="submit" class="btn btn-primary mt-3">Create</button>
    </form>
</div>

